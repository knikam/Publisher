<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:padding="15dp">

        <View
            android:id="@+id/name"
            android:layout_width="80dp"
            android:layout_height="@dimen/placeholder_text_height"
            android:layout_marginBottom="5dp"
            android:layout_toRightOf="@id/thumbnail"
            android:background="@color/placeholder_bg" />

        <View
            android:layout_width="80dp"
            android:id="@+id/designation"
            android:layout_height="@dimen/placeholder_text_height"
            android:layout_below="@id/name"
            android:layout_toRightOf="@id/thumbnail"
            android:background="@color/placeholder_bg" />

        <View
            android:layout_width="80dp"
            android:layout_marginTop="5dp"
            android:id="@+id/qualification"
            android:layout_height="@dimen/placeholder_text_height"
            android:layout_below="@id/designation"
            android:layout_toRightOf="@id/thumbnail"
            android:background="@color/placeholder_bg" />

        <View
            android:layout_width="80dp"
            android:layout_marginTop="5dp"
            android:id="@+id/emial"
            android:layout_height="@dimen/placeholder_text_height"
            android:layout_below="@id/qualification"
            android:layout_toRightOf="@id/thumbnail"
            android:background="@color/placeholder_bg" />

        <View
            android:layout_width="80dp"
            android:layout_marginTop="5dp"
            android:id="@+id/contact_no"
            android:layout_height="@dimen/placeholder_text_height"
            android:layout_below="@id/emial"
            android:layout_toRightOf="@id/thumbnail"
            android:background="@color/placeholder_bg" />

        <View
            android:layout_width="80dp"
            android:layout_marginTop="5dp"
            android:id="@+id/password"
            android:layout_height="@dimen/placeholder_text_height"
            android:layout_below="@id/contact_no"
            android:layout_toRightOf="@id/thumbnail"
            android:background="@color/placeholder_bg" />

        <View
            android:id="@+id/r_name"
            android:layout_width="120dp"
            android:layout_height="@dimen/placeholder_text_height"
            android:layout_marginBottom="5dp"
            android:layout_toRightOf="@id/name"
            android:layout_marginLeft="@dimen/padding_10"
            android:background="@color/placeholder_bg" />

        <View
            android:layout_width="80dp"
            android:id="@+id/r_designation"
            android:layout_height="@dimen/placeholder_text_height"
            android:layout_below="@id/name"
            android:layout_toRightOf="@id/designation"
            android:layout_marginLeft="@dimen/padding_10"
            android:background="@color/placeholder_bg" />

        <View
            android:layout_width="100dp"
            android:layout_marginTop="5dp"
            android:id="@+id/r_qualification"
            android:layout_height="@dimen/placeholder_text_height"
            android:layout_below="@id/designation"
            android:layout_toRightOf="@id/qualification"
            android:layout_marginLeft="@dimen/padding_10"
            android:background="@color/placeholder_bg" />

        <View
            android:layout_width="130dp"
            android:layout_marginTop="5dp"
            android:id="@+id/r_emial"
            android:layout_height="@dimen/placeholder_text_height"
            android:layout_below="@id/qualification"
            android:layout_toRightOf="@id/emial"
            android:layout_marginLeft="@dimen/padding_10"
            android:background="@color/placeholder_bg" />

        <View
            android:layout_width="80dp"
            android:layout_marginTop="5dp"
            android:id="@+id/r_contact_no"
            android:layout_height="@dimen/placeholder_text_height"
            android:layout_below="@id/emial"
            android:layout_toRightOf="@id/contact_no"
            android:layout_marginLeft="@dimen/padding_10"
            android:background="@color/placeholder_bg" />

        <View
            android:layout_width="100dp"
            android:layout_marginTop="5dp"
            android:id="@+id/r_password"
            android:layout_height="@dimen/placeholder_text_height"
            android:layout_below="@id/contact_no"
            android:layout_toRightOf="@id/password"
            android:layout_marginLeft="10dp"
            android:background="@color/placeholder_bg" />

    </RelativeLayout>

</android.support.v7.widget.CardView>
