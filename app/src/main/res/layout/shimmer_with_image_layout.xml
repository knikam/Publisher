<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/activity_padding">

    <View
        android:id="@+id/thumbnail"
        android:layout_width="@dimen/placeholder_image"
        android:layout_height="@dimen/placeholder_image"
        android:layout_marginRight="@dimen/activity_padding"
        android:background="@color/placeholder_bg" />

    <View
        android:id="@+id/name"
        android:layout_width="150dp"
        android:layout_height="@dimen/placeholder_text_height"
        android:layout_marginBottom="5dp"
        android:layout_toRightOf="@id/thumbnail"
        android:background="@color/placeholder_bg" />

    <View
        android:layout_width="100dp"
        android:id="@+id/designation"
        android:layout_height="@dimen/placeholder_text_height"
        android:layout_below="@id/name"
        android:layout_toRightOf="@id/thumbnail"
        android:background="@color/placeholder_bg" />

    <View
        android:layout_width="120dp"
        android:layout_marginTop="5dp"
        android:id="@+id/qualification"
        android:layout_height="@dimen/placeholder_text_height"
        android:layout_below="@id/designation"
        android:layout_toRightOf="@id/thumbnail"
        android:background="@color/placeholder_bg" />

    <View
        android:layout_width="100dp"
        android:layout_marginTop="5dp"
        android:id="@+id/emial"
        android:layout_height="@dimen/placeholder_text_height"
        android:layout_below="@id/qualification"
        android:layout_toRightOf="@id/thumbnail"
        android:background="@color/placeholder_bg" />

    <View
        android:layout_width="130dp"
        android:layout_marginTop="5dp"
        android:id="@+id/contact_no"
        android:layout_height="@dimen/placeholder_text_height"
        android:layout_below="@id/emial"
        android:layout_toRightOf="@id/thumbnail"
        android:background="@color/placeholder_bg" />
    <View
        android:layout_width="80dp"
        android:layout_marginTop="5dp"
        android:layout_height="@dimen/placeholder_text_height"
        android:layout_below="@id/contact_no"
        android:layout_toRightOf="@id/thumbnail"
        android:background="@color/placeholder_bg" />

</RelativeLayout>