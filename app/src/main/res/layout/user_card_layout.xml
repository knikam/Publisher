<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/user_card"
    android:elevation="8dp"
    android:layout_marginBottom="3dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/id_teacher_list_card"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:background="@drawable/card_view_white"
        android:orientation="horizontal">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/id_usercard_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginBottom="4dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="22dp"
            android:src="@color/placeholder_bg" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="8dp"
            android:paddingLeft="8dp">

            <TextView
                android:id="@+id/id_usercard_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/imageView20"
                android:layout_alignParentEnd="true"
                android:layout_marginLeft="30dp"
                android:fontFamily="sans-serif-condensed"
                android:text="Name here"
                android:textColor="@color/themecolor_dark"
                android:layout_alignParentRight="true" />

            <TextView
                android:id="@+id/id_usercard_qualifiaction"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/id_usercard_name"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="3dp"
                android:fontFamily="sans-serif-condensed"
                android:text="Qualification here"
                android:textColor="@color/themecolor_dark"
                tools:ignore="RtlCompat" />

            <TextView
                android:id="@+id/id_usercard_designation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/id_usercard_qualifiaction"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="2dp"
                android:fontFamily="sans-serif-condensed"
                android:text="Designation here"
                android:textColor="@color/themecolor_dark"
                android:layout_alignParentRight="true" />

            <TextView
                android:id="@+id/id_usercard_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/id_usercard_designation"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="2dp"
                android:fontFamily="sans-serif-condensed"
                android:text="Email Id here"
                android:textColor="@color/themecolor_dark"
                tools:ignore="RtlCompat" />

            <TextView
                android:id="@+id/id_usercard_contact"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/id_usercard_email"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="3dp"
                android:fontFamily="sans-serif-condensed"
                android:text="Contact No here"
                android:textColor="@color/themecolor_dark"
                tools:ignore="RtlCompat" />

            <ImageView
                android:id="@+id/imageView20"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="16dp"
                app:srcCompat="@drawable/ic_user_name"
                android:layout_alignParentLeft="true"
                tools:ignore="RtlCompat,VectorDrawableCompat" />

            <ImageView
                android:id="@+id/imageView21"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_below="@id/imageView20"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                app:srcCompat="@drawable/ic_qualificatin"
                tools:ignore="VectorDrawableCompat" />

            <ImageView
                android:id="@+id/imageView22"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_below="@id/imageView21"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                app:srcCompat="@drawable/ic_designation"
                tools:ignore="VectorDrawableCompat" />

            <ImageView
                android:id="@+id/imageView23"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_below="@id/imageView22"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                app:srcCompat="@drawable/ic_email_fill"
                tools:ignore="VectorDrawableCompat" />

            <ImageView
                android:id="@+id/imageView24"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_below="@id/imageView23"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                app:srcCompat="@drawable/ic_smartphone_call"
                tools:ignore="VectorDrawableCompat" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="120dp">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:id="@+id/id_approve_btn"
                    android:layout_marginTop="12dp"
                    android:text="Approve"
                    android:layout_below="@id/id_usercard_contact"
                    android:textColor="@color/white"
                    android:background="@drawable/button_accept"
                    />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:id="@+id/id_delete_btn"
                    android:layout_alignParentEnd="true"
                    android:layout_below="@+id/id_usercard_contact"
                    android:background="@drawable/button_cancel"
                    android:text="Delete"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="12dp"
                    android:textColor="@color/white"
                    android:layout_alignParentRight="true" />

            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>